<div class="container">
  <div class="row vh-100 d-flex justify-content-center">
    <div class="col-12 align-self-center">
      <div class="row">
        <div class="col-lg-5 mx-auto">
          <div class="card">
            <div class="card-body p-0 auth-header-box">
              <div class="text-center p-3">
                <a href="<%= root_path %>" class="logo logo-admin">
                  <img src="/assets/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Let's Get Started Abacus</h4>
                <p class="text-muted  mb-0">Sign in to continue to Abacus.</p>
              </div>
            </div>
            <div class="card-body p-0">
              <ul class="nav-border nav nav-pills" role="tablist">
                <li class="nav-item" style="display:table;margin:0px auto 0px auto;">
                  <a class="nav-link active fw-semibold" data-bs-toggle="tab" href="<%= new_session_path(resource_name) %>" role="tab">Log In</a>
                </li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal auth-form") do |f| %>

                    <div class="form-group mb-2">
                      <label class="form-label" for="username">Email</label>
                      <div class="input-group">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true, label: false, wrapper: false,
                                    input_html: { autocomplete: "email", class: "form-control",  id: "username" } %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                      <label class="form-label" for="userpassword">Password</label>
                      <div class="input-group">
                        <%= f.input :password,
                                    required: false, label: false , wrapper: false,
                                    input_html: { autocomplete: "current-password", class: "form-control",  id: "userpassword" } %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group row my-3">
                      <div class="col-sm-6">
                        <div class="custom-control custom-switch switch-success">
                          <%= f.input :remember_me, input_html: { class: "custom-control-input" }, as: :boolean if devise_mapping.rememberable? %>
                        </div>
                      </div><!--end col-->
                      <div class="col-sm-6 text-end">
                        <a href="<%= new_password_path(resource_name) %>" class="text-muted font-13"><i class="dripicons-lock"></i> Forgot password?</a>
                      </div><!--end col-->
                    </div><!--end form-group-->

                    <div class="form-group mb-0 row">
                      <div class="col-12">
                        <%= f.button :submit, "Log in", class: "btn btn-primary w-100 waves-effect waves-light"%>
                      </div><!--end col-->
                    </div> <!--end form-group-->
                  <% end %>
                  <div class="m-3 text-center text-muted">
                    <p class="mb-0">Don't have an account ?  <a href="<%= new_registration_path(resource_name) %>" class="text-primary ms-2">Sign Up</a></p>
                  </div>
                </div>
              </div>
            </div><!--end card-body-->
            <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">Abacus Â© <%= Time.zone.now.year %></span>
            </div>
          </div><!--end card-->
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end col-->
  </div><!--end row-->
</div><!--end container-->
<script>
    var body = document.body;
    body.classList.add("account-body");
    body.classList.add("accountbg");
</script>
<div class="container">
  <div class="row vh-100 d-flex justify-content-center">
    <div class="col-12 align-self-center">
      <div class="row">
        <div class="col-lg-5 mx-auto">
          <div class="card">
            <div class="card-body p-0 auth-header-box">
              <div class="text-center p-3">
                <a href="<%= root_path %>" class="logo logo-admin">
                  <img src="/assets/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Reset Password For Abacus</h4>
                <p class="text-muted  mb-0">Enter your Email and instructions will be sent to you!</p>
              </div>
            </div>
            <div class="card-body">
              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= f.error_notification %>
                <div class="form-group mb-2">
                  <label class="form-label" for="username">Email</label>
                  <div class="input-group">
                    <%= f.input :email,
                                required: true,
                                autofocus: true, label: false, wrapper: false,
                                input_html: { autocomplete: "email", class: "form-control" } %>
                  </div>
                </div><!--end form-group-->

                <div class="form-group mb-0 row">
                  <div class="col-12 mt-2">
                    <%= f.button :submit, "Reset", class: "btn btn-primary w-100 waves-effect waves-light"%>
                  </div><!--end col-->
                </div> <!--end form-group-->
              <% end %>
              <p class="text-muted mb-0 mt-3">Remember It ?  <a href="<%= new_session_path(resource_name) %>" class="text-primary ms-2">Sign in here</a></p>
            </div>
            <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">Abacus Â© <%= Time.zone.now.year %></span>
            </div>
          </div><!--end card-->
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end col-->
  </div><!--end row-->
</div><!--end container-->
<script>
    var body = document.body;
    body.classList.add("account-body");
    body.classList.add("accountbg");
</script>
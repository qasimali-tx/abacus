<div class="container">
  <div class="row vh-100 d-flex justify-content-center">
    <div class="col-12 align-self-center">
      <div class="row">
        <div class="col-lg-5 mx-auto">
          <div class="card">
            <div class="card-body p-0 auth-header-box">
              <div class="text-center p-3">
                <a href="<%= root_path %>" class="logo logo-admin">
                  <img src="/assets/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Let's Get Started Abacus</h4>
                <p class="text-muted  mb-0">Sign in to continue to Abacus.</p>
              </div>
            </div>
            <div class="card-body p-0">
              <ul class="nav-border nav nav-pills" role="tablist">
                <li class="nav-item" style="display:table;margin:0px auto 0px auto;">
                  <a class="nav-link active fw-semibold" data-bs-toggle="tab" href="#Register_Tab" role="tab">Register</a>
                </li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active px-3 pt-3" id="Register_Tab" role="tabpanel">
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= f.error_notification %>

                    <div class="form-group mb-2">
                      <label class="form-label" for="username">First Name</label>
                      <div class="input-group">
                        <%= f.input :first_name, as: :string, label: false, wrapper: false, :required => true, :input_html => { :class => 'form-control' }, label: false  %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                      <label class="form-label" for="username">Last Name</label>
                      <div class="input-group">
                        <%= f.input :last_name, as: :string, label: false, wrapper: false, :required => true, :input_html => { :class => 'form-control' }, label: false  %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                      <label class="form-label" for="useremail">Email</label>
                      <div class="input-group">
                        <%= f.input :email,
                                    required: true,
                                    autofocus: true, label: false, wrapper: false,
                                    input_html: { autocomplete: "email" }%>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                      <label class="form-label" for="userpassword">Password</label>
                      <div class="input-group">
                        <%= f.input :password,
                                    required: true, label: false, wrapper: false,
                                    input_html: { autocomplete: "new-password" } %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                      <label class="form-label" for="conf_password">Confirm Password</label>
                      <div class="input-group">
                        <%= f.input :password_confirmation,
                                    required: true, label: false, wrapper: false,
                                    input_html: { autocomplete: "new-password" } %>
                      </div>
                    </div><!--end form-group-->

                    <div class="form-group row my-3">
                      <div class="col-sm-12">
                        <div class="custom-control custom-switch switch-success">
                          <input type="checkbox" class="custom-control-input" id="customSwitchSuccess2">
                          <label class="form-label text-muted" for="customSwitchSuccess2">You agree to the Abacus <a href="#" class="text-primary">Terms of Use</a></label>
                        </div>
                      </div><!--end col-->
                    </div><!--end form-group-->

                    <div class="form-group mb-0 row">
                      <div class="col-12">
                        <%= f.button :submit, "Register", class: "btn btn-primary w-100 waves-effect waves-light" %>
                      </div><!--end col-->
                    </div> <!--end form-group-->
                  <% end %>
                  <p class="my-3 text-muted">Already have an account ?<a href="<%= new_session_path(resource_name) %>" class="text-primary ms-2">Log in</a></p>
                </div>
              </div>
            </div><!--end card-body-->
            <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">Abacus Â© <%= Time.zone.now.year %></span>
            </div>
          </div><!--end card-->
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end col-->
  </div><!--end row-->
</div><!--end container-->
<script>
    var body = document.body;
    body.classList.add("account-body");
    body.classList.add("accountbg");
</script>
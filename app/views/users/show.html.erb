<div class="row">
  <div class="col-sm-12">
    <div class="page-title-box">
      <div class="row">
        <div class="col">
          <h4 class="page-title">Upload Files</h4>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Abacus</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Apps</a></li>
            <li class="breadcrumb-item active">Upload Files</li>
          </ol>
        </div>
        <!--end col-->
      </div><!--end row-->
    </div><!--end page-title-box-->
  </div><!--end col-->
</div><!--end row-->
<!-- end page title end breadcrumb -->
<%= form_with model: @user do |form| %>
  <div class="d-flex align-items-center mb-3">
    <div class="col-10">
      <%= form.file_field :documents , class: "form-control ", id:"inputGroupFile02",accept: 'application/pdf,
    application/zip,application/vnd.openxmlformats-officedocument.wordprocessingml.document', multiple: true%>
    </div>
    <div class="col-2">
      <%= form.submit 'Upload File', class: 'btn btn-md btn-secondary mx-3'%>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="table-rep-plugin">
<table class="table table-striped mb-0 myTable">
  <thead>
  <tr>
    <th data-priority="1">UserName</th>
    <th data-priority="1">File Type</th>
    <th data-priority="3">FileName</th>
    <th data-priority="3">Uploaded Date</th>
    <th data-priority="3"></th>
    <th data-priority="3"></th>

  </tr>
  </thead>
  <tbody>
  <% (0...@user.documents.count).each do |document| %>
  <tr>
    <th data-priority="1"><%= current_user.full_name %></th>
    <th data-priority="1">PDF</th>
    <th data-priority="1"><%= @user.documents[document].filename.to_s %><br></th>
    <th data-priority="3"><%= Time.now %></th>
    <th><%= link_to 'View', asset_path("#{url_for(@user.documents[document])}#view=FitH&toolbar=0&scrollbar=0"),target: :_blank, class: 'btn btn-secondary btn-sm' %></th>
    <th><%= link_to 'Download', (@user.documents[document]), class: 'btn btn-secondary btn-sm',download: true %></th>
  </tr>
  <% end %>

  </tbody>
</table>
</div>
</div>
</div><!--end card-->
</div> <!-- end col -->
</div> <!-- end row -->
